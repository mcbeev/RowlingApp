@page "/"
@inject TeamService TeamService

<div class="jumbotron">
  <h1>Rowling for the Steele's</h1>
  <p>Hosted by <a href="http://www.crossfitallendale.com/" target="_blank">Crossfit Allendale.</a> Athletes row with the goal of hitting 100 meters. However many meters over or under 100 is their score for the frame. Each person rows 10 frames. Lowest score wins.</p>
  <p><a class="btn btn-primary btn-lg" href="#" role="button">Donate to #DebStrong</a></p>
</div>

<div class="card-group">
    @if (Teams != null)
    {
        @foreach (var team in Teams)
        {
            <div class="card">
                <img class="card-img-top" src="@team.TeamLogo.First().Url" alt="@team.TeamName logo" />
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">@team.TeamName</h4>
                </div>
                <div class="card-body">
                    <h1 class="card-title">14 <small class="text-muted">/ 2 frames to go</small></h1>
                    <p>
                        <a href="#" data-team-id="@team.PageUrl" class="btn btn-primary" role="button">up</a>
                        <a href="#" class="btn btn-default" role="button">down</a>
                        <a href="#" class="btn btn-link" role="button">reset</a>
                    </p>
                    <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
            </div>
        }
    }
</div>  